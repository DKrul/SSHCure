{% extends "base.twig" %}

{% block head %}
    {{ parent() }}

    <link href="css/dashboard.css" rel="stylesheet">
    <script src="js/dashboard.js"></script>
{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div id="attacks" class="main-block">
                    <h1>Attacks</h1>
                    <div id="attacks-plot-header" style="display: none;">
                        <div id=attacks-plot-legend style="float: left;"></div>
                        <div id=attacks-plot-selector style="float: right;">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default">Day</button>
                                <button type="button" class="btn btn-default">Week</button>
                                <button type="button" class="btn btn-default">Month</button>
                            </div>
                        </div>
                    </div>
                    <div id="attacks-plot" style="display: none;"></div>
                    <div class="loading"><span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span>Loading...</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-md-8">
                <div id="incoming-attacks" class="main-block">
                    <h1>Incoming attacks</h1>
                    <div id="incoming-attacks-table" style="display: none;"></div>
                    <div class="loading"><span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span>Loading...</div>
                </div>
            </div>
            <div class="col-sm-4 col-md-4">
                <div id="top-targets-compromise" class="main-block">
                    <h1>Top targets - Compromise</h1>
                    <div class="loading"><span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span>Loading...</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-md-8">
                <div id="outgoing-attacks" class="main-block">
                    <h1>Outgoing attacks</h1>
                    <p>Text...</p>
                </div>
            </div>
            <div class="col-sm-4 col-md-4">
                <div id="top-targets-bruteforce" class="main-block">
                    <h1>Top targets - bruteforce</h1>
                    <p>Text...</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}